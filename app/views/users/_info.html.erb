<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows <%= link_to user.followings.count, user_followings_path(user.id) %> </th>
  </tr>
  <tr>
    <th>followers <%= link_to user.followers.count, user_followers_path(user.id) %></th>
  </tr>
</table>
<% if user.id =! current_user %>
<div class="form-group">
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: 'btn btn-success' %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: 'btn btn-success' %>
  <% end %>
</div>
<% else %>
<% end %>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>